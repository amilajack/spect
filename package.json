{
  "name": "spect",
  "version": "15.0.0",
  "description": "Micro aspects with effects and observables",
  "main": "index.js",
  "module": "index.js",
  "unpkg": "dist/spect.min.js",
  "type": "module",
  "scripts": {
    "start": "es-dev-server --app-index test/index.html --node-resolve --dedupe",
    "test": "node -r esm -r ./test/register.js test/index.js",
    "bundle": "rollup -c rollup.config.js",
    "minify": "terser dist/spect.js -c -m --module --source-map -o dist/spect.min.js",
    "build": "npm run bundle && npm run minify",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spectjs/spect.git"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ],
  "keywords": [
    "aspect",
    "observable",
    "iterator",
    "async iterator",
    "hooks",
    "react",
    "rxjs",
    "jquery",
    "react-hooks",
    "fx",
    "effect",
    "useEffect",
    "lifecycle",
    "dom",
    "custom-elements",
    "web-components",
    "aop",
    "aspect oriented programming",
    "pointcut",
    "join point",
    "advice"
  ],
  "author": "dy <df.creative@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spectjs/spect/issues"
  },
  "homepage": "https://github.com/spectjs/spect#readme",
  "dependencies": {
    "immutable-tuple": "^0.4.10",
    "selector-set": "^1.1.5"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.1",
    "augmentor": "^2.1.5",
    "dom-lite": "^0.5.1",
    "es-dev-server": "^1.32.0",
    "esm": "^3.2.25",
    "jsdom": "^16.1.0",
    "nanomorph": "^5.4.0",
    "observable": "^2.1.4",
    "rollup": "^1.31.1",
    "tst": "^5.3.3",
    "unihooks": "^1.4.5",
    "wait-please": "^3.0.0",
    "zen-observable": "^0.8.15"
  },
  "files": [
    "readme.md",
    "src",
    "test",
    "dist",
    "*.js"
  ]
}
